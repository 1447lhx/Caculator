<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:textSize="52sp">

    <TableRow>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:inputType="none"
            android:singleLine="true"
            android:text="design by lhx"
            android:textSize="20sp" />
    </TableRow>
    <TableRow>

        <EditText
            android:id="@+id/result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:gravity="left|center_vertical"
            android:lines="2"
            android:textSize="30sp" />
    </TableRow>
    <TableRow>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textSize="15sp">

    <Button
        android:id="@+id/de2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="二进制"
        android:textSize="15sp" />
        <Button
            android:id="@+id/de16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="十六进制"
            android:textSize="15sp" />
</LinearLayout>
    </TableRow>
    <TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="15sp">

            <Button
                android:id="@+id/factorial"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="n!"
                android:textSize="15sp" />

            <Button
                android:id="@+id/exp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="e"
                android:textSize="15sp" />

            <Button
                android:id="@+id/pi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="π"
                android:textSize="15sp" />
            <Button
                android:id="@+id/sin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sin"
                android:textSize="15sp" />
            <Button
                android:id="@+id/clear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="clear"
                android:textSize="15sp" />

        </LinearLayout>
    </TableRow>

    <TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="15sp">

            <Button
                android:id="@+id/cos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="15sp" />

            <Button
                android:id="@+id/left_bracket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="("
                android:textSize="15sp" />

            <Button
                android:id="@+id/right_bracket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=")"
                android:textSize="15sp" />
            <Button
                android:id="@+id/tan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="tan"
                android:textSize="15sp" />
            <Button
                android:id="@+id/ci"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="^"
                android:textSize="15sp" />

        </LinearLayout>
    </TableRow>
    <TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="15sp">

            <Button
                android:id="@+id/ln"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ln"
                android:textSize="15sp" />

            <Button
                android:id="@+id/num7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textSize="15sp" />

            <Button
                android:id="@+id/num8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="15sp" />
            <Button
                android:id="@+id/num9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="15sp" />
            <Button
                android:id="@+id/divide"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:textSize="15sp" />
        </LinearLayout>
    </TableRow>
    <TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="15sp">

            <Button
                android:id="@+id/log"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="log"
                android:textSize="15sp" />

            <Button
                android:id="@+id/num4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="15sp" />

            <Button
                android:id="@+id/num5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="15sp" />
            <Button
                android:id="@+id/num6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="15sp" />
            <Button
                android:id="@+id/multiply"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="*"
                android:textSize="15sp" />

        </LinearLayout>
    </TableRow>

    <TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="15sp">

            <Button
                android:id="@+id/add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="15sp" />

            <Button
                android:id="@+id/num1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="15sp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="15sp" />
            <Button
                android:id="@+id/num3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="15sp" />
            <Button
                android:id="@+id/subtract"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="15sp" />

        </LinearLayout>
    </TableRow>
    <TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textSize="15sp">

            <Button
                android:id="@+id/num0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="15sp" />

            <Button
                android:id="@+id/point"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="."
                android:textSize="15sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="
                android:textSize="15sp" />
            <Button
                android:id="@+id/del"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DEL"
                android:textSize="15sp" />

        </LinearLayout>
    </TableRow>

        <Button
            android:id="@+id/btn_standar"
            android:layout_below="@+id/clear"
            android:text="标准"
            />
    <Button
        android:id="@+id/btn_calculator_to_unit_convert"
        android:layout_below="@+id/btn_standar"
        android:text="@string/str_unit_conversion" />
</TableLayout>

